    !>  Function to compute the error in the 1D scalar diffusion equation.
    !!
    !!  The error is computed as the L2-Norm of the difference in the analytical and
    !!  numerical solutions integrated over the domain.
    !!
    !!  @author Nathan A. Wukie (AFRL)
    !!  @date   9/16/2016
    !!
    !!
    !------------------------------------------------------------------------------------
    function compute_1D_mesh_motion_diffusion_error(data,ChiDG_COMM) result(error)
        type(chidg_data_t), intent(inout)   :: data
        type(mpi_comm),     intent(in)      :: ChiDG_COMM

        real(rk), allocatable, dimension(:) :: &
            u_dg, u_analytical, x_gq, gq_error_squared


        integer(ik) :: iu1, iu2, iu3
        integer(ik) :: ielem, idom, ierr, itime
        real(rk)    :: error_squared_sum, error_squared_sum_reduced, element_error_squared, error


        associate (mesh   => data%mesh,     &
                   sdata  => data%sdata,    &
                   eqnset => data%eqnset,   &
                   prop   => data%eqnset(1)%prop)


            !
            ! Get equation indices
            !
            iu1 = prop%get_primary_field_index("grid_displacement1")
            iu2 = prop%get_primary_field_index("grid_displacement2")
            iu3 = prop%get_primary_field_index("grid_displacement3")


            !
            ! Zero error accumulator
            !
            error_squared_sum = ZERO



            !
            ! Loop over elements and accumulate error
            !
            itime = 1
            do idom = 1,data%mesh%ndomains()
                do ielem = 1,data%mesh%domain(idom)%nelem


                    !
                    ! Compute the analytical solution at the quadrature nodes
                    !
                    x_gq = mesh%domain(idom)%elems(ielem)%quad_pts(:)%c1_
                    u_analytical = x_gq

                    !
                    !ANALYTICAL SOLUTION DEFINITION
                    !

                    !Constant Diffusivity - XI-MAX Dirichlet BC
                    !u_analytical =  ONE-x_gq


                    !Constant Diffusivity - XI_MAX Neumann BC
                    !u_analytical =  ONE



                    !Linear Diffusivity - XI-MAX Dirichlet BC
                    !u_analytical =  ONE-log(ONE-0.5_rk*x_gq)/log(ONE-0.5_rk)

                    !Linear Diffusivity - XI_MAX Neumann BC
                    !u_analytical =  ONE

                    !Exponential Diffusivity - XI-MAX Dirichlet BC
                    u_analytical =  (ONE-exp(-0.5_rk*(ONE-x_gq)))/(ONE-exp(-0.5_rk))


                    !Exponential Diffusivity - XI_MAX Neumann BC
                    !u_analytical =  ONE


                    !
                    ! Interpolate DG numerical solution
                    !
                    u_dg = interpolate_element_standard(mesh,sdata%q,idom,ielem,iu1,itime,'value')


                    !
                    ! Compute error
                    !                    
                    gq_error_squared = (u_analytical - u_dg)**TWO


                    !
                    ! Integrate error
                    !
                    element_error_squared = sum(gq_error_squared * mesh%domain(idom)%elems(ielem)%jinv * mesh%domain(idom)%elems(ielem)%gq%vol%weights)


                    !
                    ! Accumulate error from each element
                    !
                    error_squared_sum = error_squared_sum + element_error_squared
                    !
                    ! Compute the analytical solution at the quadrature nodes
                    !
                    x_gq = mesh%domain(idom)%elems(ielem)%quad_pts(:)%c1_
                    u_analytical = ZERO 

                    !
                    ! Interpolate DG numerical solution
                    !
                    u_dg = interpolate_element_standard(mesh,sdata%q,idom,ielem,iu2,itime,'value')


                    !
                    ! Compute error
                    !                    
                    gq_error_squared = (u_analytical - u_dg)**TWO


                    !
                    ! Integrate error
                    !
                    element_error_squared = sum(gq_error_squared * mesh%domain(idom)%elems(ielem)%jinv * mesh%domain(idom)%elems(ielem)%gq%vol%weights)


                    !
                    ! Accumulate error from each element
                    !
                    error_squared_sum = error_squared_sum + element_error_squared

!
                    ! Compute the analytical solution at the quadrature nodes
                    !
                    x_gq = mesh%domain(idom)%elems(ielem)%quad_pts(:)%c1_
                    u_analytical = ZERO 

                    !
                    ! Interpolate DG numerical solution
                    !
                    u_dg = interpolate_element_standard(mesh,sdata%q,idom,ielem,iu3,itime,'value')


                    !
                    ! Compute error
                    !                    
                    gq_error_squared = (u_analytical - u_dg)**TWO


                    !
                    ! Integrate error
                    !
                    element_error_squared = sum(gq_error_squared * mesh%domain(idom)%elems(ielem)%jinv * mesh%domain(idom)%elems(ielem)%gq%vol%weights)


                    !
                    ! Accumulate error from each element
                    !
                    error_squared_sum = error_squared_sum + element_error_squared



                end do ! ielem
            end do ! idom


        end associate



        ! Reduce the total error across processors
        call MPI_AllReduce(error_squared_sum,error_squared_sum_reduced,1,MPI_REAL8,MPI_SUM,ChiDG_COMM,ierr)

        ! Sqrt of the reduced error
        error = sqrt(error_squared_sum_reduced)

        
    end function compute_1D_mesh_motion_diffusion_error
