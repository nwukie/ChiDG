                     ]



        files = [ string_t("1D_mesh_motion_diffusion_20x1x1.h5"),         &
                  string_t("1D_mesh_motion_diffusion_20x1x1.h5"),         &
                  string_t("1D_mesh_motion_diffusion_20x1x1.h5"),         &
                  string_t("1D_mesh_motion_diffusion_30x1x1.h5"),         &
                  string_t("1D_mesh_motion_diffusion_30x1x1.h5"),         &
                  string_t("1D_mesh_motion_diffusion_30x1x1.h5"),         &
                  string_t("1D_mesh_motion_diffusion_20x1x1_chimera.h5"), &
                  string_t("1D_mesh_motion_diffusion_20x1x1_chimera.h5"), &
                  string_t("1D_mesh_motion_diffusion_20x1x1_chimera.h5"), &
                  string_t("1D_mesh_motion_diffusion_20x1x1_chimera.h5"), &
