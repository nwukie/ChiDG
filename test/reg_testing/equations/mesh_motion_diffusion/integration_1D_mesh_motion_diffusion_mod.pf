    !----------------------------------------------------------------------------------------
    !                       Scalar Diffusion Coefficient Model Methods
    !----------------------------------------------------------------------------------------

    !>  Initialize scalar diffusion coefficient model with name and model field being 
    !!  provided.
    !!
    !!  @author Nathan A. Wukie
    !!  @date   12/3/2016
    !!
    !----------------------------------------------------------------------------------------
    subroutine init_model(self)
        class(testing_1D_mesh_motion_diffusion_model_t),    intent(inout)   :: self

        call self%set_name('Testing 1D Mesh Motion Diffusion :: Coefficient Model')
        call self%set_dependency('f(Q-)')

        call self%add_model_field('Mesh Motion Diffusion Coefficient')

    end subroutine init_model
    !****************************************************************************************



    !>  Implement the function for providing the scalar diffusion coefficient field.
    !!
    !!  @author Nathan A. Wukie
    !!  @date   12/3/2016
    !!
    !----------------------------------------------------------------------------------------
    subroutine compute_model(self,worker)
        class(testing_1D_mesh_motion_diffusion_model_t), intent(in)      :: self
        type(chidg_worker_t),                       intent(inout)   :: worker

        type(AD_D), allocatable, dimension(:)   :: u, mu

        real(rk), allocatable, dimension(:)     :: x_gq
        integer(ik)                             :: idom, ielem, iface

        u = worker%get_primary_field_general('grid_displacement2', 'value')

        idom = worker%element_info%idomain_l
        ielem = worker%element_info%ielement_l
        if (worker%interpolation_source== 'element') then
            x_gq = worker%mesh%domain(idom)%elems(ielem)%quad_pts(:)%c1_
        else
            iface = worker%iface
            x_gq = worker%mesh%domain(idom)%faces(ielem, iface)%quad_pts(:)%c1_
        end if


        mu = u
        mu = ZERO

        !
        ! DIFFUSIVITY DEFINITION
        !

        !Constant diffusivity
        !mu = 1._rk
        
        !Linear Diffusivity
        !mu = 1._rk-0.5_rk*x_gq

        !Exponential Diffusivity
        mu = exp(-0.5_rk*x_gq)

        call worker%store_model_field('Mesh Motion Diffusion Coefficient', 'value', mu)

    end subroutine compute_model
