        integer(ik)                 :: nelem
        real(rk)                    :: val

        val = 0.1_rk

        !
        ! Multiply real * domain_vector. TESTING THIS
        !
        self%bv_res = self%bv_a - self%bv_b


        !
        ! Test values. domain_vector%vecs%vec
