    !>
    !!
    !!
    !!
    !--------------------------------------------------------------------------------------------------------------------------------------------------------------------------
    @test
    subroutine test__HB_matrices(this)
        class(HB_matrices), intent(inout)       :: this

        real(rk)        :: invE(this%ntime, this%ntime)
        real(rk)        :: dinvE(this%ntime, this%ntime)
        real(rk)        :: D(this%ntime, this%ntime)

        real(rk)        :: freq(this%nfreq), time(this%ntime)
        real(rk)        :: freq_min, dt, multiplier
        integer(ik)     :: ifreq, itime

        do ifreq = 1, this%nfreq
            freq(ifreq) = real(ifreq,rk)*0.2_rk
        end do

        freq_min   = minval(freq)
        dt         = ONE/real(this%ntime,rk)
        multiplier = TWO*PI/freq_min

        do itime = 1,this%ntime
            time(itime) = multiplier*real(itime,rk)*dt
        end do

        call calc_inv_E(this%nfreq, this%ntime, freq, time, invE)
        call calc_diff_inv_E(this%nfreq, this%ntime, freq, time, dinvE)
        call calc_pseudo_spectral_operator(this%nfreq, this%ntime, freq, time, D)

        @assertEqual(this%test_invE, invE)
        @assertEqual(this%test_dinvE, dinvE)
        @assertEqual(this%test_D, D)

    end subroutine test__HB_matrices
